<% layout('layouts/boilerplate') %>
<%-include('../partials/navbar')%>

<div class="row">
    <div class="col-6 mx-auto">
        <form action="/products/<%=item._id%>?_method=PATCH" method="post">
        <div class='mb-3'>
        <label for="name">Name:</label>
        <input type="text" class="form-control" name="name" id="name" value="<%= item.name%>" placeholder="name of the product">
        <!-- here inside input name="name" type that name only which u gave in the schemaa ,remember this very improtant point -->
    </div>
    <div class="mb-3">
        <label for="img">Image:</label>
        <input type="text" class="form-control" name="img" id="img"  value="<%= item.img%>" placeholder="image url of the product">
    </div>
    <div class="mb-3">
        <label for="price">Price:</label>
        <input type="number" class="form-control" name="price" id="price"  value="<%=item.price%>" placeholder="enter price of the product"> 
    </div>
    <div class="mb-3">
        <label for="des">Description:</label>
        <textarea  rows="3" name="description" id="des"   placeholder="description of the product"><%=item.description%></textarea>
    </div>
    <a class="btn btn-sm btn-secondary" href="/products/<%=item._id%>">Back</a>
    
    <button class="btn btn-success btn-sm">Edit</button>
    </form>
    </div>
</div>